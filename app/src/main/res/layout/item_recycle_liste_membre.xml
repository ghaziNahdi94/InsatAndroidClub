<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_recycle_liste_membres"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_width="2dp"
            app:civ_border_color="#000"
            android:src="@drawable/logo"
            android:layout_width="80sp"
            android:layout_height="100sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <TextView
                android:textSize="22sp"
                android:id="@+id/name_recycle_liste_membres"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="nom et prÃ©nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



      <View
          android:layout_width="match_parent"
          android:layout_height="15dp"/>





            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageButton
                    android:id="@+id/tel_recycle_liste_membres"
                    android:src="@drawable/ic_tel"
                    android:background="@drawable/selector_button_cercle"
                    android:layout_width="40sp"
                    android:layout_height="40sp" />

                <ImageButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/sms_recycle_liste_membres"
                    android:src="@drawable/ic_message"
                    android:background="@drawable/selector_button_cercle"
                    android:layout_width="40sp"
                    android:layout_height="40sp" />

                <ImageButton
                    android:layout_marginLeft="10dp"
                    android:id="@+id/chat_recycle_liste_membres"
                    android:src="@drawable/ic_chat"
                    android:background="@drawable/selector_button_cercle"
                    android:layout_width="40sp"
                    android:layout_height="40sp" />


            </LinearLayout>

        </LinearLayout>






    </LinearLayout>


    <View
        android:background="#a1a1a1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</LinearLayout>