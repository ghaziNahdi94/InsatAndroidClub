<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/insat_back"
            android:id="@+id/image_recycle_events"
            android:layout_width="130sp"
            android:layout_height="150sp"
     />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:id="@+id/title_recycle_events"
                android:textSize="16sp"
                android:textColor="#000"
                android:text="Titre Event 1"
                android:layout_width="200sp"
                android:layout_height="30sp" />

            <TextView
                android:layout_marginLeft="6dp"
                android:id="@+id/description_recycle_events"
                android:layout_marginTop="9dp"
                android:text="desciption desciption desciption desciption desciption desciption"
                android:layout_width="220sp"
                android:layout_height="60sp" />

            <RelativeLayout
                android:background="#efeded"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="6dp"
                android:layout_centerVertical="true"
                android:id="@+id/date_recycle_events"
                android:textColor="@color/colorPrimary"
                android:text="mer 19 oct Ã  14:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="2dp"
                    android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                    android:src="@drawable/fleche_droit"
                    android:layout_width="20sp"
                    android:layout_height="20sp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


    <View
        android:background="#a6a6a6"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>