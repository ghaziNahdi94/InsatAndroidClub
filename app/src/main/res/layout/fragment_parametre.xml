<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.insat.ghazi.iac.Fragments.ParametreFragment">



   <LinearLayout
       android:gravity="center_vertical"
       android:id="@+id/layout_check1"
       android:padding="16dp"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <ImageView
           android:src="@drawable/phonep"
           android:layout_width="50dp"
           android:layout_height="40dp" />

       <TextView
           android:textColor="#000"
           android:layout_marginLeft="15dp"
           android:layout_weight="1"
           android:textSize="20sp"
           android:text="Autorisé les appels"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <CheckBox
           android:id="@+id/check1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:enabled="false"

           />

   </LinearLayout>


    <View
        android:background="#d4d4d4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>





    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/layout_check2"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/smsp"
            android:layout_width="50dp"
            android:layout_height="40dp" />

        <TextView
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Autorisé les SMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            />

    </LinearLayout>

    <View
        android:background="#d4d4d4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



</LinearLayout>
