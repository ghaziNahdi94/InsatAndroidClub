<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="horizontal"

    android:paddingTop="6dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:paddingTop="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_image_header"
        android:layout_marginTop="20dp"
        android:layout_width="50sp"
        android:layout_height="50sp"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#fff"
        android:src="@drawable/anonyme"
        />

    <TextView
        android:id="@+id/drawer_name_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:text="Ghazi Nahdi"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/drawer_email_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ghazivdlz07@gmail.com" />
    </LinearLayout>



    <ImageView
        android:layout_marginRight="6dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/whitelogo"
        android:layout_width="60sp"
        android:layout_height="60sp" />



</RelativeLayout>
